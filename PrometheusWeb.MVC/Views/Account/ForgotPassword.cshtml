@model PrometheusWeb.Data.UserModels.AdminUserModel

@{
    ViewBag.Title = "ForgotPassword";
}

<h2>ForgotPassword</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container" style="background:#f8f8f6">
    <h4>Search for yourself!</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group" style="padding-left:27%">
        <input type="submit" name="search" value="Search" style="background-color:greenyellow; color:black; font-weight:600;" />
    </div>
</div>
}
