<h2>UpdatePlan</h2>


@using (Html.BeginForm("UpdateHomeworkPlan", "Homework", FormMethod.Post, Model))


{
    @Html.AntiForgeryToken()
    <div cla></div>
    <div class="form-horizontal">
        
        <hr />

        @Html.HiddenFor(model => model.HomeworkID)
        @Html.HiddenFor(model => model.HomeworkPlanID)
        @Html.HiddenFor(model => model.StudentID)

    <div class="container" style="background-color:#f8f8f6;">
        <div class="form-group" style="padding:1%; padding-left:35%">
            @Html.LabelFor(model => model.PriorityLevel, htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PriorityLevel, new { htmlAttributes = new { @class = "col-md-2 control-label" } })
                @Html.ValidationMessageFor(model => model.PriorityLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding:1%; padding-left:35%">
            @Html.LabelFor(model => model.isCompleted, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.isCompleted, new { htmlAttributes = new { @class = "col-md-2 control-label" } })
                @Html.ValidationMessageFor(model => model.isCompleted, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding:1%; padding-left:35%" ;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        <div style="padding:1%; padding-left:35%">
            @Html.ActionLink("Back to List", "GetHomeworkPlan")
        </div>
    </div></div>
}



